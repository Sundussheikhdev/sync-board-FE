# =============================================================================
# COLLABORATIVE APP - FRONTEND ENVIRONMENT VARIABLES
# =============================================================================

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
NEXT_PUBLIC_WS_HEARTBEAT_INTERVAL=60000  # 60 seconds in milliseconds
NEXT_PUBLIC_WS_MAX_RECONNECT_ATTEMPTS=5
NEXT_PUBLIC_WS_RECONNECT_DELAY=1000  # 1 second in milliseconds

# =============================================================================
# CHAT CONFIGURATION
# =============================================================================
NEXT_PUBLIC_CHAT_MESSAGE_LIMIT=100  # Number of messages to load from history
NEXT_PUBLIC_CHAT_DUPLICATE_TIME_WINDOW=2000  # 2 seconds in milliseconds

# =============================================================================
# ROOM CONFIGURATION
# =============================================================================
NEXT_PUBLIC_ROOM_REFRESH_INTERVAL=10000  # 10 seconds in milliseconds
NEXT_PUBLIC_MAX_ROOM_NAME_LENGTH=50
NEXT_PUBLIC_MIN_ROOM_NAME_LENGTH=3

# =============================================================================
# USER CONFIGURATION
# =============================================================================
NEXT_PUBLIC_MAX_USERNAME_LENGTH=20
NEXT_PUBLIC_MIN_USERNAME_LENGTH=2
NEXT_PUBLIC_USERNAME_REGEX=^[a-zA-Z0-9_-]+$

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
NEXT_PUBLIC_MAX_FILE_SIZE=10485760  # 10MB in bytes
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,image/bmp,image/svg+xml,application/pdf

# =============================================================================
# UI CONFIGURATION
# =============================================================================
NEXT_PUBLIC_APP_NAME=Collaborative Whiteboard
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENABLE_DEBUG_LOGS=false

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_LOCAL_STORAGE_PREFIX=collaborative-app
NEXT_PUBLIC_USERNAME_STORAGE_KEY=username

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true
NEXT_PUBLIC_ENABLE_USERNAME_PERSISTENCE=true
NEXT_PUBLIC_ENABLE_ROOM_HISTORY=true 